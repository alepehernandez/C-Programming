//Find how many  non-zero element are in a matrix (two-dimensional array)

#include <stdio.h>

    int main(){
        int matrix[3][3]={
            {10,-4,0},
            {7,8,3},
            {0,0,1}
        };
        int r,c;
        int i,j;
        int count=0;
        
        printf("Enter number of rows and columns of matrix:\n");
        scanf("%d %d", &r,&c);
        
        // For loops to read row and colums
        for(i=0; i< r; i++){
            
            for (j=0; j<c; j++) {
                if(matrix[i][j]!=0)
                    count++;
            }
            }
        printf("non-zero elements are in a matrix is:%d\n", count);
        
    return 0;
}
