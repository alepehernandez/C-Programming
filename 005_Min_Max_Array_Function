
/* Min_Max_Array_Function Write a C PRogram to read: 1,-1,3,4,5,6,8,10,12 into an array. 
Then write two functions that finds  Minimum and the other one finds Maximum of the array and returns Max and Min to main program.
You then print the values of Max and Min in main.*/


#include<stdio.h>

//function declaration
int findMaxElem(int[], int );
int findMinElem(int[], int );

int main()
{
    int MAX=9;
    int arr1[MAX],mxelem,minelem,n,i;
    
    printf("\n\n Function : Get MAX and MIN element of an array\n");
    printf("\n-----------------------------------------------\n");

       printf(" Input the number of elements to be stored in the array:");
       scanf("%d",&n);
  
       printf(" Input %d elements in the array:\n",n);
       for(i=0;i<n;i++)
        {
         printf(" element - %d : ",i);
         scanf("%d",&arr1[i]);
       }
    mxelem=findMaxElem(arr1, n);

    printf("The MAX element in the array is: %d\n\n",mxelem);
    
    
    minelem=findMinElem(arr1, n);

    printf("The MIN element in the array is: %d\n\n",minelem);
    
    return 0;
    
}
int findMaxElem(int arr1[],int n1)

{
    int i=0,mxelem;
    mxelem=arr1[0];
    while(i < n1)
   {
      if(mxelem<arr1[i])
           mxelem=arr1[i];
      i++;
    }
    return mxelem;
    
    
    //MIN
}
int findMinElem(int arr1[],int n1)
    {
        int i=0,minelem;
        minelem=arr1[0];
        while(i > n1)
       {
          if(minelem<arr1[i])
               minelem=arr1[i];
          i++;
        }
        return minelem;
    }

