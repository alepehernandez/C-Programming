#include <stdio.h>
struct Student {
   int grade[3];
};

int main() {
    struct Student s[5];
    int i=0;
    
    // Ask user to enter grade for students
    for (i = 0; i < 5; ++i) {
        printf("Enter Grades for student %d:", (i+1));
        scanf("%d %d %d", &s[i].grade[0],&s[i].grade[1],&s[i].grade[2]);
    }
    
    int sum=0,j;
    for(i=0;i<5; i++)
    {
        //declare and initialize Max variables
    int max=s[i].grade[0];
        //find largest marks for each student
        for(j=0;j<3;j++)
        {
            if(max<s[i].grade[j])
            {
                max=s[i].grade[j];
            }
        }
    printf("Largest grade of Student %d: %d\n",(i+1),max);
    // sum of largest
    sum=sum+max;
}
// find avg
    double avg=sum/5;
    printf("\n AVG of largest marsk is %lf\n",avg);
    return 0;
}
